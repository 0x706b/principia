{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "rootDir": "../src",
    "outDir": "../dist/dist/.intermediary-build",
    "tsBuildInfoFile": "../tsbuildinfo/intermediary.tsbuildinfo",
    "plugins": [
      {
        "after": true,
        "transform": "@0x706b/ts-transform-fix-esm",
        "relativeProjectRoot": "../../",
        "createRequire": false
      }
    ]
  },
  "exclude": ["../build", "../dist", "../node_modules", "../test"],
  "include": ["../src"]
}
