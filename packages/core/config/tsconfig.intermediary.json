{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "module": "es2015",
    "target": "es2020",
    "rootDir": "../src",
    "outDir": "../dist/dist/.intermediary",
    "tsBuildInfoFile": "../tsbuildinfo/esm.tsbuildinfo",
    "plugins": [
      {
        "transform": "../../compile/src/index.ts",
        "moduleMap": {
          "^src/(.*)": "(@principia/core): _src/$1"
        }
      }
    ]
  },
  "exclude": ["../build", "../dist", "../node_modules", "../test"],
  "include": ["../src"]
}
