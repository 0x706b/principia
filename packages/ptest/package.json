{
  "name": "@principia/ptest",
  "version": "0.5.2",
  "description": "A simple runner for @principia/test",
  "repository": "git://github.com/0x706b/principia",
  "license": "MIT",
  "author": "Peter Krol <peter@peterkrol.com>",
  "exports": {
    ".": {
      "traced": {
        "browser": "./dist/dist-traced/esm/index.js",
        "node": {
          "import": "./dist/dist-traced/node/index.js",
          "require": "./dist/dist-traced/cjs/index.js"
        }
      },
      "browser": "./dist/dist/esm/index.js",
      "node": {
        "import": "./dist/dist/node/index.js",
        "require": "./dist/dist/cjs/index.js"
      }
    },
    "./*": {
      "traced": {
        "browser": "./dist/dist-traced/esm/*",
        "node": {
          "import": "./dist/dist-traced/node/*",
          "require": "./dist/dist-traced/cjs/*"
        }
      },
      "browser": "./dist/dist/esm/*",
      "node": {
        "import": "./dist/dist/node/*",
        "require": "./dist/dist/cjs/*"
      }
    }
  },
  "main": "dist/dist/cjs/index.js",
  "module": "./dist/dist/esm/index.js",
  "types": "dist/index.d.ts",
  "bin": "./bin/ptest.js",
  "scripts": {
    "autofix": "yarn lint --fix",
    "build": "yarn build:types && yarn build:node && yarn build:esm && yarn build:cjs",
    "build:cjs": "ttsc --build ./config/tsconfig.cjs.json && babel --config-file ./config/cjs.babelrc.json --extensions '.js' --source-maps true --out-dir dist/dist/cjs dist/dist/cjs",
    "build:esm": "ttsc --build ./config/tsconfig.esm.json && babel --config-file ./config/esm.babelrc.json --extensions '.js' --source-maps true --out-dir dist/dist/esm dist/dist/esm",
    "build:node": "ttsc --build ./config/tsconfig.node.json",
    "build:postprocess": "ts-node ../../scripts/rewrite-source-maps.ts && ts-node ../../scripts/package.ts && yarn sort-package-json ./dist/package.json && yarn prettier --write ./dist/package.json && cpx ./bin/**/* ./dist/bin",
    "build:test": "ttsc --build ./config/tsconfig.test.json --verbose",
    "build:traced": "yarn build:traced:node && yarn build:traced:esm && yarn build:traced:cjs",
    "build:traced:cjs": "ttsc --build ./config/tsconfig.traced.cjs.json && babel --config-file ./config/cjs.babelrc.json --extensions '.js' --source-maps true --out-dir dist/dist-traced/cjs dist/dist-traced/cjs",
    "build:traced:esm": "ttsc --build ./config/tsconfig.traced.esm.json && babel --config-file ./config/esm.babelrc.json --extensions '.js' --source-maps true --out-dir dist/dist-traced/esm dist/dist-traced/esm",
    "build:traced:node": "ttsc --build ./config/tsconfig.traced.node.json",
    "build:types": "ttsc --build ./config/tsconfig.types.json --verbose",
    "buildAll": "yarn build && yarn build:traced && yarn build:postprocess",
    "clean": "rimraf dist build tsbuildinfo",
    "clean:test": "rimraf build",
    "generateSubpaths": "ts-node ../../scripts/subpath.ts && sort-package-json && prettier --write package.json",
    "lint": "eslint .",
    "prepublish": "yarn buildAll && rimraf ./dist/dist/.intermediary-build && rimraf ./dist/dist/.traced-intermediary-build"
  },
  "dependencies": {
    "@principia/base": "^0.5.2",
    "@principia/compile": "^0.4.2",
    "@principia/io": "^0.5.2",
    "@principia/test": "^0.5.2",
    "glob": "^7.1.6",
    "ts-node": "^9.1.1",
    "yargs": "^16.2.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "gitHead": "279b458c86849c03382587008aefcc87b73e3ce9"
}
